<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matias.lav5tp.PKG_PedidoActivity.PedidoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="@string/mi_pedido"
                android:textSize="28dp"
                android:gravity="center"
                android:textColor="#000"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="120dp"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="@string/Importe"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="@string/estimado"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:gravity="center"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtTotalPedido"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="@string/totalAPagar"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnConfirmarPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/btnConfirmarPedido"
                android:textSize="10dp"/>

            <Button
                android:id="@+id/btnVolverAlMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/btnVolverMenus"
                android:textSize="10dp"/>


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcvProductosPedidos"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
