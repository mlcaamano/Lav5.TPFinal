<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matias.lav5tp.PKG_MenuActivity.MenuActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Pedido"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#000"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="120dp"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="Importe"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:text="estimado:"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:gravity="center"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtImporteTotal"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="$ 0.00"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnEnviarPedido"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Enviar pedido"
                android:textSize="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="left|center"
                android:text="Elementos seleccionados:"
                android:textSize="15dp"
                android:textColor="#000"
                android:gravity="center"/>

            <TextView
                android:id="@+id/cantidadPedidos"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_gravity="right|center"
                android:text="000"
                android:textSize="15dp"
                android:textColor="#000"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:background="#09F"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <Button
                android:id="@+id/btnBebidas"
                android:layout_width="127dp"
                android:layout_height="40dp"
                android:text="Enviar pedido"
                android:textSize="10dp"
                android:background="#09F"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/btnMenus"
                android:layout_width="127dp"
                android:layout_height="40dp"
                android:text="Enviar pedido"
                android:textSize="10dp"
                android:background="#09F"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/btnSnacks"
                android:layout_width="127dp"
                android:layout_height="40dp"
                android:text="Enviar pedido"
                android:textSize="10dp"
                android:background="#09F"
                android:textColor="#FFF"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
